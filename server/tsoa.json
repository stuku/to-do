{
    "entryFile": "./src/index.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "./src/controllers/**/*.controller.ts"
    ],
    "spec": {
        "outputDirectory": "spec",
        "specVersion": 3
    },
    "swagger": {
        "outputDirectory": "../spec",
        "entryFile": "./src/index.ts",
        "host": "localhost:3000",
        "basePath": "/v1"
    },
    "routes": {
        "entryFile": "./src/index.ts",
        "routesDir": "./src/routes",
        "basePath": "/v1"
    }
}